<%= form_for @message, url: contact_path do |message_form| %>
  <fieldset>
  <div class="field">
    <%= message_form.text_field :first_name, placeholder: "First Name" %>
  </div>

  <fieldset>
    <div class="field">
      <%= message_form.text_field :surname, placeholder: "Surname" %>
    </div>

  <div class="field">
    <%= message_form.email_field :email, placeholder: "Email"%>
  </div>

  <div class="field">
    <%= message_form.text_area :content, placeholder: "Message"%>
  </div>
  </fieldset>

  <fieldset>
  <div class="field">
    <%= message_form.submit "Send" %>
  </div>
  </fieldset>
<% end %>
